{% extends '_layout.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

<section class="article">
    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <h2 class="offset-2 mb-5">Articles</h2>

        {% for article in articles %}
            <div class="card col-6 offset-3 mb-5">
                <div class="card-body">
                    <h3 class="card-title">{{ article.title }}</h3>
                    {% if article.text|length > 300 %}
                        <p class="card-text">{{ article.text|slice(0, 250)|raw }}...</p>
                    {% else %}
                        <p class="card-text">{{ article.text }}</p>
                    {% endif %}
                    <p class="sign">Le {{ article.createdAt|date("d/m/Y") }} Ã©crit par <span
                                class="gold">{{ article.createdBy.email is defined ? article.createdBy.email }}</span>
                    </p>
                    <div class="d-flex justify-content-end">
                        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary mx-2"><i class="fas fa-pen"></i></a>
                        <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary mx-2"><i class="fas fa-eye"></i></a>
                    </div>
                </div>
            </div>
        {% else %}
            <p colspan="7">no records found</p>
        {% endfor %}
        <a href="{{ path('article_new') }}"><i class=" my-5 fa fa-plus-circle fa-5x offset-6" style="color: #BEA058;"></i></a>
    </section>

{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('article') }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}
