            <div class="d-flex justify-content-end">
                <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary mx-2"><i
                            class="fas fa-pen"></i></a>
            </div>
        </div>
    </div>

    <a href="{{ path('article_index') }}"><i class=" my-5 fas fa-arrow-alt-circle-left fa-5x offset-6"></i></a>

